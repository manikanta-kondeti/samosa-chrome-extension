{
  "manifest_version": 2,

  "name": "Samosa",
  "description": "Share audio clips in facebook",
  "version": "1.0",

  "background": {

    "scripts": ["js/jquery-2.1.4.min.js","js/background.js","js/client.js"]

  },
 
 "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",


  "permissions": [
          "webRequest",
          "clipboardWrite",
          "https://www.facebook.com/*",
          "https://apis.google.com/*"
        ],



  "content_scripts": [{ // Scripts to run on page
    "matches": ["https://www.facebook.com/*"],
    "js": [ 
      "js/jquery-2.1.4.min.js",
      "js/main.js"
    ],
    "css":[
      "css/main.css"
    ],

    "run_at": "document_start"
  }],

  "web_accessible_resources": ["images/icon.png","modal.html","css/modal.css","js/jquery-2.1.4.min.js","js/modal.js","images/play.png","images/pause.png"],

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  }
}
